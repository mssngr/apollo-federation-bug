{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "built",
    "rootDir": "src",
    "strict": true,
    "target": "es2018",
    "typeRoots": ["src/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts"]
}
